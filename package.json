{
  "name": "personal-workstation",
  "private": true,
  "version": "0.5.13",
  "description": "Personal Workstation - Electron Desktop Application",
  "author": "lixiaoblack",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:python": "node scripts/build-python.js",
    "rebuild:native": "electron-rebuild -f -w bcrypt,better-sqlite3",
    "fix:symlinks": "node scripts/before-pack.js",
    "build": "pnpm run build:python && pnpm run rebuild:native && pnpm run fix:symlinks && vite build && electron-builder",
    "build:skip-python": "pnpm run rebuild:native && pnpm run fix:symlinks && vite build && electron-builder",
    "build:quick": "pnpm run fix:symlinks && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.0",
    "@ant-design/x": "^2.2.2",
    "@monaco-editor/react": "^4.7.0",
    "antd": "^6.3.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "mobx": "^6.15.0",
    "mobx-react-lite": "^4.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "remark-gfm": "^4.0.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.5.0",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.6.0",
    "monaco-editor": "^0.55.1",
    "postcss": "^8.5.6",
    "prebuild-install": "^7.1.3",
    "sass": "^1.97.3",
    "tailwindcss": "3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1",
    "vite": "^5.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.personal.workstation",
    "productName": "Personal Workstation",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "extraResources": [
      {
        "from": "dist/python-service",
        "to": "python-service",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true
    }
  }
}
