{
  "name": "personal-workstation",
  "private": true,
  "version": "0.5.51",
  "description": "个人工作站 - Electron 桌面应用",
  "author": "lixiaoblack",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:python": "node scripts/build-python.js",
    "build": "vite build && node scripts/build-python.js && electron-builder",
    "build:skip-python": "vite build && electron-builder",
    "build:win": "vite build && node scripts/build-python.js && electron-builder --win",
    "build:mac": "vite build && node scripts/build-python.js && electron-builder --mac",
    "build:all": "vite build && node scripts/build-python.js && electron-builder --mac --win",
    "preview": "vite preview",
    "lint": "eslint .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.0",
    "@ant-design/x": "^2.2.2",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/material-symbols-outlined": "^5.2.36",
    "@monaco-editor/react": "^4.7.0",
    "adm-zip": "^0.5.16",
    "antd": "^6.3.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "js-yaml": "^4.1.1",
    "mobx": "^6.15.0",
    "mobx-react-lite": "^4.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.0",
    "remark-gfm": "^4.0.1",
    "swagger-parser": "^10.0.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.29.0",
    "@babel/types": "^7.29.0",
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.5.0",
    "@types/adm-zip": "^0.5.7",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.6.0",
    "monaco-editor": "^0.55.1",
    "postcss": "^8.5.6",
    "prebuild-install": "^7.1.3",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "tailwindcss": "3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1",
    "vite": "^5.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-monaco-editor": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.personal.workstation",
    "productName": "个人工作站",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/index.html",
      "dist/assets/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/bcrypt/**/*",
      "**/node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/python-service",
        "to": "python-service",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app needs access to the microphone for voice input",
        "NSCameraUsageDescription": "This app needs access to the camera"
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true
    }
  }
}
